/**index.wxss**/
.container{
  display: flex;
  justify-content: center;
  align-content: center;
  flex-direction: column;
  text-align: center;
  padding: 0px;
  font-family: Arial, Helvetica, sans-serif;
}
.section {
  margin: 10px;
}
form{
  margin:10px;
}
textarea{
  height: 30px;
}
.description{
  font-size: 10px;
}
.title{
  padding: 30px;
}

.swiper-tab{
  position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.swiper-tab-item{
    width: 30%; 
    color:#434343;
}
.active{
    color:#F65959;
    border-top: 4rpx solid #F65959;
}
swiper{
  text-align: center;
}
.hidden {
  display: none;
}
.button-hover {
  background-color: lightgrey;
}
.selfcheck {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.selfcheck button {
  border-radius: 50%;
}
#selfcheckin{
  background-color: red;
}
#selfcheckout{
  background-color: yellowgreen;
}